{
  "compilerOptions": {
    /* language & libs ----------------------------------------------------- */
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* JS / TS behaviour --------------------------------------------------- */
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,      // stop crawling broken .d.ts files
    "esModuleInterop": true,

    /* module resolution --------------------------------------------------- */
    "module": "esnext",
    "moduleResolution": "bundler",

    /* misc ---------------------------------------------------------------- */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["types/*"]
    },

    /* Next.js TS plugin --------------------------------------------------- */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types",
    "src",
    "pages",
    "components",
    ".next/types/app/(category)/direct-mail-mailing-services/page.tsx",
    "app/(footer)/blog/affordable-printing-solutions"
  ],
  "exclude": ["node_modules"]
}
